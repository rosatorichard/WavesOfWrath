<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/start_screen_two"
    tools:context="com.batchmates.android.wavesofwrath.view.mainactivity.MainActivity">

    <Button
        android:text="Kill Your Captain"
        android:onClick="killCaptain"
        android:textColor="@color/colorDeath"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/death"
        android:layout_width="100sp"
        android:layout_height="100sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:onClick="startYourAdventure"
        android:background="@drawable/wood_floor_dark"
        android:layout_gravity="bottom"
        android:text="Start your adventure"
        android:textSize="20sp"
        android:padding="5sp"
        android:layout_width="match_parent"
        android:layout_height="50sp" />
</LinearLayout>

</LinearLayout>
